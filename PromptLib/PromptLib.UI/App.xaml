<Application
    x:Class="PromptLib.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PromptLib.UI"
    xmlns:view="clr-namespace:PromptLib.UI.Views"
    xmlns:vm="clr-namespace:PromptLib.UI.ViewModels"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:LibraryViewModel}">
            <view:LibraryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BuildPromptViewModel}">
            <view:BuildPromptView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <view:SettingsView />
        </DataTemplate>
    </Application.Resources>
</Application>
